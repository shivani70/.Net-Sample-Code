@model OMTModel.ResetPasswordOMT
@{
     ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card card-header">
                    <h1 class="text-center text-primary">Login</h1>
                </div>
                <div class="card-body">
                    <form method="Post" asp-action="ResetPassword">
                        <p class="text-center text-danger">@TempData["error"]</p>
                        <div class="form-group">
                           <input type="hidden" asp-for="Email" value = "@TempData["Email"]"/>
                        </div>
                        <div class="form-group">
                             <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter New Password"/>
                        </div>
                         <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Enter Confirm Password"/>
                        </div>
                         <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-sm btn-outline-success floatright"/>
                        </div>
                 </form>
            </div>
         </div>
       </div>
     </div>
    </div>

